                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <button class="btn btn-outline-primary">PDF</button>
                </td>
                <td>@hospital.ID</td>
