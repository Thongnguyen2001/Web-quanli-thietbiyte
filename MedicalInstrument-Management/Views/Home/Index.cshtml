<form class="row g-3" method="get" action="/home/index">
                <div class="col-md-6">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Khoa</span>
                        <select id="inputKhoa" class="form-select">
                            <option selected>Choose...</option>
                            <option>CDHA</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Kỹ sư</span>
                        <input class="form-control input-sm" name="device_name" id="device_name" type="text">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Tên thiết bị</span>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Model</span>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Số seri</span>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Năm sử dụng</span>
                        <input class="form-control input-sm" id="inputsm" type="text">
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-group input-group-sm mb-5">
                        <span class="input-group-text">Tình trạng thiết bị</span>
                        <textarea class="form-control" aria-label="With textarea"></textarea>
                    </div>
                </div>       
                <div class="col-6">
                    <div class="input-group input-group-sm mb-5">
                        <span class="input-group-text">Ý kiến giám định</span>
                        <textarea class="form-control" aria-label="With textarea"></textarea>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-group input-group-sm mb-5">
                        <span class="input-group-text">Nội dung sữa chữa</span>
                        <textarea class="form-control" aria-label="With textarea"></textarea>                  
                    </div>
                </div>
                <div class="col-12">
                    <label class="form-check-label" for="autoSizingCheck">
                        Chi phí
                    </label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="autoSizingCheck">
                        <label class="form-check-label" for="autoSizingCheck">
                            Có
                        </label> 
                    </div>              
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="autoSizingCheck">
                        <label class="form-check-label" for="autoSizingCheck">
                            Không
                        </label>                     
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="autoSizingCheck">
                        <label class="form-check-label" for="autoSizingCheck">
                            Liên hệ công ty
                        </label>                     
                    </div>
                </div> 
                </div>
                <div class="d-flex flex-row-reverse">
                    <button type="button" class="btn btn-outline-primary" style="margin-right: 30px">
                        Tạo phiếu
                    </button>
                    <button type="button" class="btn btn-outline-secondary" style="margin-right: 10px;">
                        Xóa
                    </button>
                    <button type="button" class="btn btn-outline-dark" style="margin-right:10px;">
                        Chỉnh sửa
                    </button>
                </div>                     
         </form>

@if (hospital != null){
